import random

palavra_skate = "SKATE"

def jogar_round(jogador_ativo, jogador_passivo, letras_ativo, letras_passivo):
    print(f"\n--- Vez de {jogador_ativo} ---")
    
    manobra_escolhida = input(f"{jogador_ativo}, qual manobra você vai mandar?: ").strip().title()
    
    resposta_jogador_ativo = input(f"{jogador_ativo}, acertou{manobra_escolhida}? (s/n): ").strip().lower()
    acertou_ativo = (resposta_jogador_ativo == 's')
    
    if acertou_ativo:
        print(f"Boa, {jogador_ativo} acertou o {manobra_escolhida}!")
        print(f"\nAgora é a vez de {jogador_passivo} tentar copiar.")
        
        resposta_jogador_passivo = input(f"{jogador_passivo}, você acertou o {manobra_escolhida}? (s/n): ").strip().lower()
        acertou_passivo = (resposta_jogador_passivo == 's')
        
        if acertou_passivo:
            print(f"Boa, {jogador_passivo} acertou o {manobra_escolhida} também!")
            return letras_passivo, letras_ativo, True
        else:
            print(f"Que pena, {jogador_passivo} errou o {manobra_escolhida}!")
            if len(letras_passivo) < len(palavra_skate):
                letras_passivo += palavra_skate[len(letras_passivo)]
                print(f"{jogador_passivo} agora tem: {letras_passivo}")
            else:
                print(f"{jogador_passivo} já completou 'SKATE'!")
            return letras_passivo, letras_ativo, True
    else:
        print(f"Que pena, {jogador_ativo} errou o {manobra_escolhida}!")
        print("Você passa a vez para o outro jogador.")
        return letras_passivo, letras_ativo, False

def iniciar_jogo_off():
    jogador1_nome = input("Nome do Jogador 1: ").strip()
    jogador2_nome = input("Nome do Jogador 2: ").strip()

    letras_jogador1 = ""
    letras_jogador2 = ""
    turno = random.choice([jogador1_nome, jogador2_nome])

    print("\n--- Jogo de S.K.A.T.E. ---")
    print(f"{turno} começa!")

    while letras_jogador1 != palavra_skate and letras_jogador2 != palavra_skate:
        if turno == jogador1_nome:
            letras_jogador2, letras_jogador1, continua_turno = jogar_round(jogador1_nome, jogador2_nome, letras_jogador1, letras_jogador2)
            if not continua_turno:
                turno = jogador2_nome
        else:
            letras_jogador1, letras_jogador2, continua_turno = jogar_round(jogador2_nome, jogador1_nome, letras_jogador2, letras_jogador1)
            if not continua_turno:
                turno = jogador1_nome

        print(f"\n--- Placar Atual ---")
        print(f"{jogador1_nome}: {letras_jogador1}")
        print(f"{jogador2_nome}: {letras_jogador2}")
        
        if letras_jogador1 == palavra_skate:
            print(f"\n{jogador2_nome} venceu! {jogador1_nome} levou um S.K.A.T.E. completo.")
            break
        elif letras_jogador2 == palavra_skate:
            print(f"\n{jogador1_nome} venceu! {jogador2_nome} levou um S.K.A.T.E. completo.")
            break

if __name__ == "__main__":
    iniciar_jogo_off()